<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/home_bg" >

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="49.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:background="@drawable/home_bg" >

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40.0dip"
            android:layout_marginRight="40.0dip"
            android:ellipsize="none"
            android:singleLine="true"
            android:text="更多"
            android:textColor="@color/my_mfw_name_text_color"
            android:textSize="20.0dip" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top_bar"
        android:layout_marginTop="5.0dip"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20.0dip"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/more_account_layout"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:background="@drawable/list_item_bg" >

                <TextView
                    android:id="@+id/more_item_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="18.0dip"
                    android:background="#00000000"
                    android:gravity="left|center"
                    android:text="我的账号"
                    android:textColor="@color/mdd_list_item_text_color"
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/more_item_state_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/more_item_arrow_iv"
                    android:text="未登录"
                    android:textColor="#ffd8d8d8"
                    android:textSize="14.0sp" />

                <ImageView
                    android:id="@+id/more_item_arrow_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:src="@drawable/search_right_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/more_share_layout"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="2.0dip"
                android:background="@drawable/list_item_bg" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="18.0dip"
                    android:background="#00000000"
                    android:gravity="left|center"
                    android:text="分享设置"
                    android:textColor="@color/mdd_list_item_text_color"
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/more_item_state_tv"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="15.0dip"
                    android:background="#00000000"
                    android:drawablePadding="13.0dip"
                    android:drawableRight="@drawable/search_right_arrow"
                    android:gravity="right|center"
                    android:textColor="@color/mdd_list_item_num_text_color"
                    android:textSize="13.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/more_feedback_layout"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="15.0dip"
                android:background="@drawable/list_item_bg" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="18.0dip"
                    android:background="#00000000"
                    android:gravity="left|center"
                    android:text="意见反馈"
                    android:textColor="@color/mdd_list_item_text_color"
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/more_item_state_tv"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="15.0dip"
                    android:background="#00000000"
                    android:drawablePadding="13.0dip"
                    android:drawableRight="@drawable/search_right_arrow"
                    android:gravity="right|center"
                    android:textColor="@color/mdd_list_item_num_text_color"
                    android:textSize="13.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/more_clearcache_layout"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="2.0dip"
                android:background="@drawable/list_item_bg" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="18.0dip"
                    android:background="#00000000"
                    android:gravity="left|center"
                    android:text="清除缓存图片"
                    android:textColor="@color/mdd_list_item_text_color"
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/more_clearcache_tv"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="15.0dip"
                    android:background="#00000000"
                    android:drawablePadding="13.0dip"
                    android:drawableRight="@drawable/search_right_arrow"
                    android:gravity="right|center"
                    android:textColor="@color/mdd_list_item_num_text_color"
                    android:textSize="13.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/more_about_layout"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="2.0dip"
                android:background="@drawable/list_item_bg" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="18.0dip"
                    android:background="#00000000"
                    android:gravity="left|center"
                    android:text="关于"
                    android:textColor="@color/mdd_list_item_text_color"
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/more_item_state_tv"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="15.0dip"
                    android:background="#00000000"
                    android:drawablePadding="13.0dip"
                    android:drawableRight="@drawable/search_right_arrow"
                    android:gravity="right|center"
                    android:textColor="@color/orage"
                    android:textSize="13.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/more_suggest_title_layout"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="15.0dip"
                android:background="@drawable/list_item_bg" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="18.0dip"
                    android:background="#00000000"
                    android:gravity="left|center"
                    android:text="应用推荐"
                    android:textColor="@color/mdd_list_item_text_color"
                    android:textSize="15.0sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/more_suggest_layout"
                android:layout_width="fill_parent"
                android:layout_height="107.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="2.0dip"
                android:background="@color/detail_subtitle_text_bg"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/more_app_fanyi"
                    android:layout_width="57.0dip"
                    android:layout_height="57.0dip"
                    android:layout_marginLeft="26.0dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/logo_renren" />

                <ImageView
                    android:id="@+id/more_app_youji"
                    android:layout_width="57.0dip"
                    android:layout_height="57.0dip"
                    android:layout_marginLeft="26.0dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/logo_sinaweibo" />

                <ImageView
                    android:id="@+id/more_app_wengweng"
                    android:layout_width="57.0dip"
                    android:layout_height="57.0dip"
                    android:layout_marginLeft="26.0dip"
                    android:layout_marginRight="26.0dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/logo_wechat" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/more_moreapp_layout"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="2.0dip"
                android:background="@drawable/list_item_bg" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="18.0dip"
                    android:background="#00000000"
                    android:gravity="left|center"
                    android:text="更多应用推荐"
                    android:textColor="@color/mdd_list_item_text_color"
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/more_item_state_tv"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="15.0dip"
                    android:background="#00000000"
                    android:drawablePadding="13.0dip"
                    android:drawableRight="@drawable/search_right_arrow"
                    android:gravity="right|center"
                    android:textColor="@color/orage"
                    android:textSize="13.0sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>